<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        android:id="@+id/expand2"
        motion:constraintSetEnd="@+id/expand2End"
        motion:constraintSetStart="@id/expand2Start"
        motion:duration="1000">
        <KeyFrameSet></KeyFrameSet>
        <OnClick
            motion:clickAction="transitionToEnd"
            motion:touchAnchorId="@+id/container2" />
    </Transition>

    <Transition
        android:id="@+id/expand3"
        motion:constraintSetEnd="@+id/expand3End"
        motion:constraintSetStart="@id/expand3Start"
        motion:duration="1000">
        <KeyFrameSet>

        </KeyFrameSet>
        <OnClick
            motion:clickAction="transitionToEnd"
            motion:touchAnchorId="@+id/container3" />
    </Transition>



    <ConstraintSet android:id="@+id/expand2Start">

    </ConstraintSet>

    <ConstraintSet android:id="@+id/expand2End">
        <Constraint
            android:id="@+id/guideline1"
            motion:layout_constraintGuide_percent="0.15" />
        <Constraint
            android:id="@+id/guideline2"
            motion:layout_constraintGuide_percent="0.85" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/expand3Start">

    </ConstraintSet>

    <ConstraintSet android:id="@+id/expand3End">
        <Constraint
            android:id="@+id/guideline2"
            motion:layout_constraintGuide_percent="0.30" />
        <Constraint
            android:id="@+id/guideline3"
            motion:layout_constraintGuide_percent="0.85" />
    </ConstraintSet>

</MotionScene>